
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter allBucket">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Buckets</a>
           </div>
        </div>
        <div class="form-title text-center ">
            <h2 class="text-dark" style="font: size 28px;">UPDATE BUCKET</h2>
            <span class="text-light" style="font-size: 20px; vertical-align: 50%;">Use the below form to Update the bucket</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
    <div class="form-center">
    <form method="POST" id="update_user" class="update_form">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class ="text-bold">Name</label>
            <input type="hidden" name="id" value="<%=buckets._id%>">
            <input type="text" name="name" value="<%=buckets.name%>" placeholder="Mukmen">
        </div>
        <div class="form-group">
            <label for="Email" class ="text-bold">Email</label>
            <input type="text" name="email" value="<%=buckets.email%>" placeholder="Mukmen@aerodyne.group">
        </div>
        <div class="form-group">
            <label for="reqLevel" class ="text-bold">Request Level</label>
        </div>
        <div class="form-group">
            <label for="reqLevel" class ="text-light"></label>
            <div class="radio inline">
                <input type="radio" name="reqLevel" value="Manager" <%=buckets.reqLevel=='Manager'?'checked':''%>>
                <label for="reqLevel" class="text-light">Manager</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="reqLevel" value="Pilot" <%=buckets.reqLevel=='Pilot'?'checked':''%>>
                <label for="reqLevel" class ="text-light">Pilot</label>
            </div>
        </div>
        <div class="form-group">
            <label for="bucketName" class ="text-bold">Bucket Name</label>
            <input type="text" name="bucketName" value="<%=buckets.bucketName%>" readonly>
        </div>
        <div class="form-group">
            <label for="bucketRegion" class ="text-bold">Bucket Region</label>
            <input type="text" name="bucketRegion" value="<%=buckets.bucketRegion%>" readonly>
        </div>
        <div class="form-group">
            <label for="publicAccess" class ="text-bold">Public Access</label>
        </div>
        <div class="form-group">
            <label for="publicAccess" class ="text-light"></label>
            <div class="radio inline">
                <input type="radio" name="publicAccess" value="Enable" <%=buckets.publicAccess=='Enable'?'checked':''%>>
                <label for="publicAccess" class ="text-light">Enable</label>
            </div>
        </div>
        <div class="form-group">
            <label for="versioning" class ="text-bold">Bucket Versioning</label>
        </div>
        <div class="form-group">
            <label for="versioning" class ="text-light"></label>
            <div class="radio inline">
                <input type="radio" name="versioning" value="Enable" <%=buckets.versioning=='Enable'?'checked':''%>>
                <label for="versioning" class ="text-light">Enable</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="versioning" value="disable" <%=buckets.versioning=='disable'?'checked':''%>>
                <label for="versioning" class ="text-light">Disable</label>
            </div>
        </div>
        <div class="form-group">
            <label for="cors" class ="text-bold">CORS Setting</label>
        </div>
        <div class="form-group">
            <label for="cors" class ="text-light"></label>
            <div class="radio inline">
                <input type="radio" name="cors" value="Enable" <%=buckets.cors=='Enable'?'checked':''%> >
                <label for="cors" class ="text-light">enable</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="cors" value="disable" <%=buckets.cors=='disable'?'checked':''%> >
                <label for="cors" class ="text-light">disable</label>
            </div>
        </div>
        <div class="form-group">
            <label for="bucketPolicy" class ="text-bold">Bucket Policy</label>
        </div>
        <div class="form-group">
            <label for="bucketPolicy" class ="text-light"></label>
            <div class="radio inline">
                <input type="radio" name="bucketPolicy" value="Get" <%=buckets.bucketPolicy=='Get'?'checked':''%>>
                <label for="bucketPolicy" class ="text-light">read only</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="bucketPolicy" value="Put,Get" <%=buckets.bucketPolicy=='Put,Get'?'checked':''%>>
                <label for="bucketPolicy" class ="text-light">read & write</label>
            </div>
        </div>
        <div class="form-group">
            <label for="ownership" class ="text-bold">Bucket Ownership</label>
        </div>
        <div class="form-group">
            <label for="ownership" class ="text-light"></label>
            <div class="radio inline">
                <input type="radio" name="ownership" value="ObjectWriter" <%=buckets.ownership=='ObjectWriter'?'checked':''%>>
                <label for="ownership" class ="text-light">Object Writer</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="ownership" value="BucketOwnerPreferred"<%=buckets.ownership=='BucketOwnerPreferred'?'checked':''%> >
                <label for="ownership" class ="text-light">Bucket Owner Preffered</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="ownership" value="BucketOwnerEnforced" <%=buckets.ownership=='BucketOwnerEnforced'?'checked':''%>>
                <label for="ownership" class ="text-light">Bucket Owner Enforced</label>
            </div>
        </div>
        <div class="form-group">
            <label for="remarks" class ="text-light">Remarks</label>
            <input type="text" name="remarks" value="<%=buckets.remarks%>" placeholder="additional notes">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
</div>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
